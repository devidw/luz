generator client {
  provider = "prisma-client-js"
  output   = "../db-client/gen"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/db.sqlite"
}

enum Msg_Role {
  User
  Being
}

model Msg {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  content    String
  role       Msg_Role
  persona    String   @default("general")
  flags      String   @default("")

  @@index([created_at])
  @@index([role])
  @@index([persona])
  @@index([flags])
}

model Mem {
  id         String   @id
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  content    String
}

model Link {
  source     String
  target     String
  created_at DateTime @default(now())

  @@id([source, target])
}
